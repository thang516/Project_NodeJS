
<div class="mt-4">
    <h3>Update Employee</h3>

    <form method="POST" action="/em/employee/{{employee.id}}/update?_method=PUT">
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Name </label>
            <input type="text" name="name" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="{{employee.name}}">

        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Position</label>
            <input type="text" name="position" class="form-control" id="exampleInputPassword1"  value="{{employee.position}}" >
            {{#if error.description}}
                <span style="color:red">{{error.position}}</span>
            {{/if}}
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Age</label>
            <input type="text" name="age" class="form-control" id="exampleInputPassword1" value="{{employee.age}}">
            {{#if error.image}}
                <span style="color:red">{{error.age}}</span>
            {{/if}}
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Phone</label>
            <input type="text" name="phone" class="form-control" id="exampleInputPassword1" value="{{employee.phone}}">
            {{#if error.videoId}}
                <span style="color:red">{{error.phone}}</span>
            {{/if}}
        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Address</label>
            <input type="text" name="address" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="{{employee.address}}" >
            {{#if error.slug}}
                <span style="color:red">{{error.address}}</span>
            {{/if}}
        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Image</label>
            <input type="text" name="image" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="{{employee.image}}">

        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Email</label>
            <input type="text" name="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="{{employee.email}}">
            {{#if error.slug}}
                <span style="color:red">{{error.email}}</span>
            {{/if}}
        </div>


        <button type="submit" class="btn btn-success">Submit</button>
    </form>

</div>
