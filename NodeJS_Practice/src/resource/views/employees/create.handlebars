<style>
    .mb-3 input {
        width: 400px;
    }
    .contents{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        }
    .btn-add{
        text-align: center;
            padding: 20px 0;
    }
    .btn-add button{
        width: 26vw;
    }
</style>

<div class="mt-4 container">
    <h1 style="display: flex;justify-content: center">CREATE EMPLOYEE</h1>

    <form method="POST" action="/em/save">
            <div class="contents">
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Name </label>
                    <input type="text" name="name" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                    {{#if error.name}}
                        <span style="color:red">{{error.name}}</span>
                    {{/if}}
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Position</label>
                    <input type="text" name="position" class="form-control" id="exampleInputPassword1">
                    {{#if error.description}}
                        <span style="color:red">{{error.position}}</span>
                    {{/if}}
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Age</label>
                    <input type="text" name="age" class="form-control" id="exampleInputPassword1">
                    {{#if error.image}}
                        <span style="color:red">{{error.age}}</span>
                    {{/if}}
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Phone</label>
                    <input type="text" name="phone" class="form-control" id="exampleInputPassword1">
                    {{#if error.videoId}}
                        <span style="color:red">{{error.phone}}</span>
                    {{/if}}
                </div>
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Address</label>
                    <input type="text" name="address" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                    {{#if error.slug}}
                        <span style="color:red">{{error.address}}</span>
                    {{/if}}
                </div>
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Image</label>
                    <input type="text" name="image" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">

                </div>
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Email</label>
                    <input type="text" name="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                    {{#if error.slug}}
                        <span style="color:red">{{error.email}}</span>
                    {{/if}}
                </div>
            </div>
       <div class="btn-add">
           <button type="submit" class="btn btn-success">Submit</button>
       </div>
    </form>

</div>
